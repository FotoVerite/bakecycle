<div class="fields" ng-show="true">
  <div class="row collapse">
    <div class="small-12 medium-3 columns">
      <%= f.input :product_id, collection: @order_creator.products, label: "Product", include_blank: "--None--", as: :select%>
    </div>
    <div class="small-12 medium-3 columns">
      <%= f.input :product_quantity, as: :string, label: "Quantity", as: :string, input_html: { class: "product_quantity_input" } %>
    </div>

    <div class="small-12 medium-3 columns">
      <%= f.input :price_per_item, as: :string, label: "Price", as: :string, input_html: { class: "price_per_item_input" }  %>
     </div>

    <div class="small-12 medium-3 columns">
      <%= f.hidden_field :_destroy, value: false %>
      <%= link_to 'X', '', :'ng-click' => "remove($event)", class: "remove_shipment_item button alert postfix" %>
    </div>
  </div>
</div>
