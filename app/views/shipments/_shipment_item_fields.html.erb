<div class="fields" ng-show="true">
  <div class="row collapse">
    <div class="small-12 large-3 columns">
      <%= f.label :product_id, "Product", class: "hide-for-large-up" %>
      <%= f.input :product_id, collection: item_finder.products, label: false, include_blank: "--None--", as: :select %>
    </div>
    <div class="small-12 large-3 columns">
      <%= f.label :product_quantity, "Quantity", class: "hide-for-large-up" %>
      <%= f.input :product_quantity, as: :string, label: false, input_html: { class: "product_quantity_input" } %>
    </div>

    <div class="small-12 large-3 columns">
      <%= f.label :product_price, "Price", class: "hide-for-large-up" %>
      <%= f.input :product_price, as: :string, label: false, input_html: { class: "product_price_input" } %>
     </div>

    <div class="small-12 large-3 columns">
      <%= f.hidden_field :_destroy, value: false %>
      <%= link_to 'X', '', :'ng-click' => "remove($event)", class: " button alert postfix" %>
    </div>
  </div>
</div>
