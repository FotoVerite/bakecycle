<div class="fields" ng-show="true">
  <div class="row collapse">
    <div class="small-12 large-4 columns">
      <%= f.label :product_id, "Product", class: "hide-for-large-up" %>
      <%= f.input :product_id, collection: shipment.available_products, label: false, include_blank: "--None--", as: :select %>
    </div>
    <div class="small-12 large-2 columns">
      <%= f.label :product_product_type, "Type", class: "hide-for-large-up" %>
      <input ng-disabled="true" type="text" value="<%= f.object.product_type %>" />
    </div>
    <div class="small-12 large-1 columns">
      <%= f.label :product_quantity, "Quantity", class: "hide-for-large-up" %>
      <%= f.input :product_quantity, as: :string, label: false, input_html: { class: "product_quantity_input" } %>
    </div>

    <div class="small-12 large-1 columns">
      <%= f.label :product_price, "Price", class: "hide-for-large-up" %>
      <%= f.input :product_price, as: :string, label: false, input_html: { class: "product_price_input", value: f.object.float_product_price } %>
     </div>

    <div class="small-12 large-2 columns">
      <%= f.label :production_start, "Production Start", class: "hide-for-large-up" %>
      <input ng-disabled="true" type="text" value="<%= f.object.production_start %>" />
    </div>

    <div class="small-12 large-2 columns">
      <%= f.hidden_field :_destroy, value: false %>
      <%= link_to 'X', '', :'ng-click' => "remove($event)", class: " button alert postfix" %>
    </div>
  </div>
</div>
