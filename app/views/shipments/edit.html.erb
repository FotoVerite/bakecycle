<% provide(:title, "Editing Shipment: #{@shipment.id}") %>

<div class="row">
  <div class="small-12 medium-6 columns">
    <h1>Editing Shipment: <%= @shipment.id %></h1>
  </div>
</div>

<ul class="stack-for-small button-group">
    <li><%= link_to 'Back', shipments_path, class: "button small"%></li>
    <li><%= link_to invoice_shipment_path(@shipment, format: :pdf), target: "_blank", class: "button small" do %>
      <i class='fi-page-export-pdf'></i> Invoice
    <% end %>
    </li>
    <li><%= link_to invoice_iif_shipment_path(shipment), target: "_blank", class: "button small" do %>
      <i class='fi-page-export'></i> IIF
    <% end %>
    </li>
    <li><%= link_to packing_slip_shipment_path(@shipment, format: :pdf), target: "_blank", class: "button small" do %>
      <i class='fi-page-export'></i> Packing Slip
    <% end %>
    </li>
</ul>

<div class="row">
  <div class="small-12 medium-6 columns">
    <h3>Client: <%= link_to @shipment.client_name, client_path(shipment.client_id), class: 'underlined-link' %></h3>
  </div>
</div>

<%= render "form"%>
