<% provide(:title, "Editing Shipment: #{@shipment.id}") %>

<div class="row">
  <div class="small-12 large-7 columns">
    <h1>Editing Shipment: <%= @shipment.id %></h1>
    <h3>Client Name: <%= @shipment.client_name %></h3>
  </div>
  <div class="small-12 large-5 columns">
    <div class="row">
      <div class="small-6 medium-3 large-offset-4 large-4 columns">
        <div class="view-pdf-button large-text-right">
          <%= link_to invoice_shipment_path(@shipment, format: :pdf), target: "_blank" do %>
          <i class="fi-page-export-pdf"></i> Shipment Pdf
          <% end %>
        </div>
      </div>
      <div class="small-6 medium-3 large-4 columns end">
        <div class="view-pdf-button large-text-right">
          <%= link_to packing_slip_shipment_path(@shipment, format: :pdf), target: "_blank" do %>
            <i class="fa fa-truck fa-3"></i> Packing Slip
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row back-button">
  <div class="small-12 column">
    <%= link_to 'Back', shipments_path%>
  </div>
</div>
<%= render "form"%>
