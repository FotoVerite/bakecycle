<div class="fields" ng-show="true">
  <div class="row collapse">
    <div class="small-12 medium-11 columns">
      <div class="row collapse">
        <div class="small-12 medium-2 columns">
          <%= f.label :product_id, "Product", class: "show-for-small-only" %>
          <%= f.collection_select :product_id, @order_creator.products, :id, :name, include_blank: "--None--" %>
        </div>
        <div class="small-12 medium-3 columns">
          <div class="row collapse">
            <div class="small-12 medium-7 columns">
              <label class="show-for-small-only">Price</label>
              <input ng-disabled="true" type="text" value='<%= "#{f.object.product.price(f.object.weekly_quantity)} @#{f.object.weekly_quantity}pc" unless f.object.id.nil? %>' />
            </div>
            <div class="small-12 medium-5 columns">
              <label class="show-for-small-only">Total</label>
              <input ng-disabled="true" type="text" value='<%= "$#{f.object.product.weekly_price(f.object.weekly_quantity)}" unless f.object.id.nil? %>' />
            </div>
          </div>
        </div>
        <div class="small-12 medium-1 columns">
          <%= f.label :monday, "Mon", class: "show-for-small-only" %>
          <%= f.text_field :monday, class: "monday_input", "ng-disabled"=>"eqStartDate(1)"%>
        </div>
        <div class="small-12 medium-1 columns">
          <%= f.label :tuesday, "Tue", class: "show-for-small-only" %>
          <%= f.text_field :tuesday, class: "tuesday_input", "ng-disabled"=>"eqStartDate(2)"%>
        </div>
        <div class="small-12 medium-1 columns">
          <%= f.label :wednesday, "Wed", class: "show-for-small-only" %>
          <%= f.text_field :wednesday, class: "wednesday_input", "ng-disabled"=>"eqStartDate(3)"%>
        </div>
        <div class="small-12 medium-1 columns">
          <%= f.label :thursday, "Thur", class: "show-for-small-only" %>
          <%= f.text_field :thursday, class: "thursday_input", "ng-disabled"=>"eqStartDate(4)"%>
        </div>
        <div class="small-12 medium-1 columns">
          <%= f.label :friday, "Fri", class: "show-for-small-only" %>
          <%= f.text_field :friday, class: "friday_input", "ng-disabled"=>"eqStartDate(5)"%>
        </div>
        <div class="small-12 medium-1 columns">
          <%= f.label :saturday, "Sat", class: "show-for-small-only" %>
          <%= f.text_field :saturday, class: "saturday_input", "ng-disabled"=>"eqStartDate(6)"%>
        </div>
        <div class="small-12 medium-1 columns end">
          <%= f.label :sunday, "Sun", class: "show-for-small-only" %>
          <%= f.text_field :sunday, class: "sunday_input", "ng-disabled"=>"eqStartDate(0)"%>
        </div>
      </div>
    </div>
    <div class="small-12 medium-1 columns">
      <%= f.hidden_field :_destroy, value: false %>
      <%= link_to 'X', '', :'ng-click' => "remove($event)", class: "remove_order_item button alert postfix" %>
    </div>
  </div>
</div>
