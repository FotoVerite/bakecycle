<div class="row">
  <div class="small-12 columns">
    <h2>Production</h2>
  </div>
  <%= link_to routes_path do %>
    <div class="large-4 medium-6 small-12 columns">
      <div class="stats border">
        <div class="left">
          Routes
          <h3><%= item_finder.routes.count %></h3>
        </div>
        <i class="fi-foundation right"></i>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
  <%= link_to production_runs_path do %>
    <div class="large-4 medium-6 small-12 columns">
      <div class="stats border">
        <div class="left">
          Production Runs
          <h3><%= item_finder.production_runs.count %></h3>
        </div>
        <i class="fi-calendar right"></i>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>

</div>
