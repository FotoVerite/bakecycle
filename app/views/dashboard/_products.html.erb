<div class="row">
  <div class="small-12 columns">
    <h2>Products</h2>
  </div>
  <%= link_to ingredients_path do %>
    <div class="large-4 medium-6 small-12 columns">
      <div class="stats border">
        <div class="left">
          Ingredients
          <h3><%= item_finder.ingredients.count %></h3>
        </div>
        <i class="fi-info right"></i>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
  <%= link_to recipes_path do %>
    <div class="large-4 medium-6 small-12 columns">
      <div class="stats border">
        <div class="left">
          Recipes
          <h3><%= item_finder.recipes.count %></h3>
        </div>
        <i class="fi-info right"></i>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
  <%= link_to products_path do %>
    <div class="large-4 medium-6 small-12 columns">
      <div class="stats border">
        <div class="left">
          Products
          <h3><%= item_finder.products.count %></h3>
        </div>
        <i class="fi-price-tag right"></i>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
</div>
