<div class="row">
  <div class="small-12 columns">
    <h2>Clients</h2>
  </div>
  <%= link_to clients_path do %>
    <div class="large-4 medium-6 small-12 columns">
      <div class="stats border">
        <div class="left">
          Clients
          <h3><%= item_finder.clients.count %></h3>
        </div>
        <i class="fi-torsos-all right"></i>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
  <%= link_to orders_path do %>
    <div class="large-4 medium-6 small-12 columns">
      <div class="stats border">
        <div class="left">
          Orders
          <h3><%= item_finder.orders.count %></h3>
        </div>
        <i class="fi-shopping-bag right"></i>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
  <%= link_to shipments_path do %>
    <div class="large-4 medium-6 small-12 columns">
      <div class="stats border">
        <div class="left">
          Invoices
          <h3><%= item_finder.shipments.count %></h3>
        </div>
        <i class="fi-calendar right"></i>
        <div class="clearfix"></div>
      </div>
    </div>
  <% end %>
</div>
