<%= link_to print_production_run_path(production_run, format: :pdf), target: "_blank" do %>
  <p><span class="table-action-icon" data-tooltip aria-haspopup="true" data-options="show_on:medium" title="Print Production Run"><i class="fi-page-export-pdf"></i></span>Print Recipes for Production Run</p>
<% end %>

<%= simple_form_for @production_run do |f| %>
  <%= f.error_notification %>

  <% if @production_run.errors.any? %>
    <div class="alert-box alert">
      <%= @production_run.errors.full_messages.join %>
    </div>
  <% end %>

  <%= render partial: "run_items", locals: {f: f} %>

  <div class="row">
    <div class="small-12 columns">
      <% if f.object.persisted? %>
        <%= f.submit "Update", class: "button", name: nil %>
        <%= link_to 'Delete', production_run_path(f.object),
          class: "button alert",
          method: :delete,
          data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
<% end %>
