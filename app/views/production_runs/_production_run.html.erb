<tr class="js-clickableRow" id="production_run_<%= production_run.id %>" href="<%= edit_production_run_path(production_run) %>">
  <td><%= production_run.id %></td>
  <td><%= production_run.date %></td>
  <td><%= production_run.run_items.count %></td>
  <td data-title="Action">
      <%= link_to edit_production_run_path(production_run) do %>
        <span class="table-action-icon" data-tooltip aria-haspopup="true" data-options="show_on:medium" title="Edit Production Run"><i class="fi-page-edit"></i></span>
      <% end %>
      <%= link_to print_production_run_path(production_run, format: :pdf), target: "_blank" do %>
        <span class="table-action-icon" data-tooltip aria-haspopup="true" data-options="show_on:medium" title="Print Production Run"><i class="fi-page-export-pdf"></i></span>
      <% end %>
  </td>
</tr>
