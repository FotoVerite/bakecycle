      <%= f.label :accounts_payable_contact_email %>
      <%= f.text_field :accounts_payable_contact_email %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.label :primary_contact_name %>
      <%= f.text_field :primary_contact_name %>
