      <%= f.text_field :business_phone %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.label :business_fax %>
      <%= f.text_field :business_fax %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.label :active, "Active"%>
      <%= f.radio_button(:active, "true", :checked => true) %>
      <%= f.label(:active_true, "Yes") %>
      <%= f.radio_button(:active, "false") %>
      <%= f.label(:active_false, "No") %>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      <%= f.label :delivery_address_street_1 %>
      <%= f.text_field :delivery_address_street_1 %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.label :delivery_address_street_2 %>
      <%= f.text_field :delivery_address_street_2 %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
