  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.label :delivery_address_zipcode %>
      <%= f.text_field :delivery_address_zipcode %>
    </div>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.label :billing_address_street_1 %>
      <%= f.text_field :billing_address_street_1 %>
