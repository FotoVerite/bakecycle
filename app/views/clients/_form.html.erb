<%= simple_form_for @client do |f| %>

  <%= f.error_notification %>

  <fieldset>
    <legend>Business Information</legend>

    <div class="row">
      <div class="small-12 large-6 columns">
        <%= f.input :name %>
      </div>

      <div class="small-12 large-6 columns">
        <%= f.input :dba %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 large-6 columns">
        <%= f.input :business_phone %>
      </div>

      <div class="small-12 large-6 columns">
        <%= f.input :business_fax %>
      </div>
    </div>

    <div class="row">


      <div class="small-12 large-6 columns">
        <%= f.input :billing_term, collection: Client.billing_terms_select, as: :select, include_blank: "Select One" %>
      </div>
      <div class="small-12 large-6 columns">
        <%= f.label :active, "Active"%>
        <%= f.radio_button(:active, "true") %>
        <%= f.label(:active_true, "Yes") %>
        <%= f.radio_button(:active, "false") %>
        <%= f.label(:active_false, "No") %>
      </div>
    </div>

  </fieldset>

  <fieldset>
    <legend>Delivery Address</legend>

    <div class="row">
      <div class="small-12 columns">
        <%= f.input :delivery_address_street_1 %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <%= f.input :delivery_address_street_2 %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 large-4 columns">
        <%= f.input :delivery_address_city %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :delivery_address_state %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :delivery_address_zipcode %>
      </div>
    </div>

  </fieldset>

  <fieldset>
    <legend>Billing Address</legend>

    <div class="row">
      <div class="small-12 columns">
        <%= f.input :billing_address_street_1 %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <%= f.input :billing_address_street_2 %>
      </div>
    </div>

    <div class="row">
      <div class="small-12 large-4 columns">
        <%= f.input :billing_address_city %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :billing_address_state %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :billing_address_zipcode %>
      </div>
    </div>

  </fieldset>

  <fieldset>
    <legend>Accounts Payable</legend>

    <div class="row">
      <div class="small-12 large-4 columns">
        <%= f.input :accounts_payable_contact_name %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :accounts_payable_contact_phone %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :accounts_payable_contact_email %>
      </div>
    </div>

  </fieldset>

  <fieldset>
    <legend>Primary Contact</legend>

    <div class="row">
      <div class="small-12 large-4 columns">
        <%= f.input :primary_contact_name %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :primary_contact_phone %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :primary_contact_email %>
      </div>
    </div>

  </fieldset>

  <fieldset>
    <legend>Secondary Contact</legend>


    <div class="row">
      <div class="small-12 large-4 columns">
        <%= f.input :secondary_contact_name %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :secondary_contact_phone %>
      </div>

      <div class="small-12 large-4 columns">
        <%= f.input :secondary_contact_email %>
      </div>
    </div>
  </fieldset>

  <div class="row">
    <div class="small-12 columns">
      <%= f.submit (@client.new_record? ? "Create" : "Update"), class: "button", name: nil %>
      <% unless @client.new_record? %>
        <%= link_to 'Delete', client_path(@client), class: "button alert",
                                  method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
<% end %>
