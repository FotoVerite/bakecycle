<% provide(:title, "Bakeries") %>

<h1>Bakeries</h1>

<p><%= link_to 'Add New Bakery', new_bakery_path, class: "button"%></p>

<table class="responsive-table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Plan</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @bakeries.each do |bakery| %>
      <tr class="js-clickable-row" href="<%= edit_bakery_path(bakery) %>">
        <th scope="row"><%= link_to bakery.name, edit_bakery_path(bakery) %></th>
        <th scope="row"><%= bakery.plan.display_name %></th>
        <td data-title="Action">
          <%= link_to edit_bakery_path(bakery) do %>
            <span class="table-action-icon icon-link-tooltip" aria-label="Edit Bakery"><i class="fi-page-edit"></i></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
