<div class="fields" ng-show="true">
  <div class="row collapse">
    <div class="small-12 medium-4 columns">
      <%= f.input :price, as: :string, input_html: { class: "price_input" }%>
    </div>
    <div class="small-12 medium-4 columns">
      <%= f.input :quantity, as: :string, input_html: { class: "quantity_input" } %>
    </div>
    <div class="small-12 medium-4 columns">
      <%= f.input :_destroy, as: :hidden, wrapper: false %>
      <%= link_to 'X', '', :'ng-click' => "remove($event)", class: "remove-button button alert postfix" %>
    </div>
  </div>
</div>
