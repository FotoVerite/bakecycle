<%= simple_form_for @product do |f| %>

  <%= f.error_notification %>

  <% if @product.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <% if msg == "Identical date and quantity already exist for this product, try a different date." %>
            <li><%= msg %></li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
  <fieldset>
    <legend>Product Information</legend>
    <div class="row">
      <div class="small-12 columns">
        <%= f.input :name, as: :string %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 columns">
        <%= f.input :product_type, collection: Product.product_types.keys.to_a, prompt: "Select One", as: :select %>
      </div>
      <div class="small-12 medium-6 columns">
        <%= f.input :base_price, as: :string %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 columns">
        <%= f.input :unit, collection: Product.units.keys.to_a, prompt: 'Select One', as: :select %>
      </div>
      <div class="small-12 medium-6 columns">
        <%= f.input :weight, as: :string%>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <%= f.input :extra_amount, as: :string%>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 columns">
        <%= f.input :inclusion_id, collection: @recipes.inclusions, label_method: :name, value_method: :id,include_blank: 'Select One', as: :select %>
      </div>
      <div class="small-12 medium-6 columns">
        <%= f.input :motherdough_id, collection: @recipes.motherdoughs, label_method: :name, value_method: :id, include_blank: 'Select One', as: :select %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <%= f.input :description, as: :text%>
      </div>
    </div>
  </fieldset>

  <div ng-controller="NestedItemCtrl">
    <%= f.simple_fields_for :price_varients do |builder| %>
      <%= render "price_varient_fields", f: builder %>
    <% end %>
    <div ng-repeat="nestedItem in nestedItems">
      <%= f.simple_fields_for :price_varients, @product.price_varients.build do |builder| %>
         <%= render "new_price_varient_fields", f: builder %>
      <% end %>
    </div>
    <%= link_to 'Add Price', '', 'ng-click' => "add()", class: "button right" %>
  </div>

  <div class="row">
    <div class="small-12 columns">
      <%= f.submit (@product.new_record? ? "Create" : "Update"), class: "button", name: nil %>
      <% unless @product.new_record? %>
        <%= link_to 'Delete', product_path(@product), class: "button alert",
                                  method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
<% end %>
