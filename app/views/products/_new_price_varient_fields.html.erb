<div class="fields" ng-show="true">
  <div class="row collapse">
    <div class="small-12 medium-3 columns">
      <%= f.input :price, as: :string,  input_html: { id: "product_price_varients_attributes_{{getRandomId($index)}}_price", name: "product[price_varients_attributes][{{getRandomId($index)}}][price]", class: "price_input" }%>
    </div>
    <div class="small-12 medium-3 columns">
      <%= f.input :quantity, as: :string, input_html: { id: "product_price_varients_attributes_{{getRandomId($index)}}_quantity", name: "product[price_varients_attributes][{{getRandomId($index)}}][quantity]", class: "quantity_input" }  %>
    </div>
    <div class="small-12 medium-3 columns">
      <%= f.input :effective_date, as: :string, placeholder: "select date", input_html: { id:"product_price_varients_attributes_{{getRandomId($index)}}_effective_date", name: "product[price_varients_attributes][{{getRandomId($index)}}][effective_date]", class: "js-datepicker" } %>
    </div>

    <div class="small-12 medium-3 columns">
      <%= f.input :_destroy, as: :hidden, wrapper: false, input_html: { name: "product[price_varients_attributes][{{getRandomId($index)}}][_destroy]" } %>
      <%= link_to 'X', '', :'ng-click' => "remove($event)", class: "remove-button button alert postfix" %>
    </div>
  </div>
</div>
