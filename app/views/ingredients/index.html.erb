<% provide(:title, "Ingredients") %>

<h1>Ingredients</h1>

<p><%= link_to 'Add New Ingredient', new_ingredient_path, class: "button"%></p>
<table class="responsive-table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr class="js-clickableRow" href='<%= "#{edit_ingredient_path(ingredient)}" %>'>
        <th scope="row"><%= link_to ingredient.name, edit_ingredient_path(ingredient) %></th>
        <td data-title="Action">
          <%= link_to edit_ingredient_path(ingredient) do %>
            <span class="table-action-icon" data-tooltip aria-haspopup="true" data-options="show_on:medium" title="Edit Ingredient"><i class="fi-page-edit"></i></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
