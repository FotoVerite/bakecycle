<h1>Ingredients</h1>
<p><%= link_to 'Add New Ingredient', new_ingredient_path %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Action</th>
  </tr>

  <% @ingredients.each do |ingredient| %>
    <tr>
      <td><%= link_to ingredient.name, edit_ingredient_path(ingredient) %></td>
      <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
    </tr>
  <% end %>
</table>
